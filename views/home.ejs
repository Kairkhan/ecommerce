<%- include("header")%>
<div class="row row-cols-1 row-cols-md-3">
  <%cards.forEach(function(card){%>
  <form action="/good" method="post">
    <div class="col mb-4">
      <div class="card">
        <img src="images/template.png" class="card-img-top" alt="images/template.png">
        <div class="card-body">
          <h5 class="card-title"><%=card.title%></h5>
          <p class="card-text"><%=card.description%></p>
        </div>
      </div>
      <button class="btn btn-sm btn-outline-dark spec-font details-button" type="submit" name="card" value ="<%=card.title%>"">More details</button>
    </div>
  </form>
  <%})%>
</div>
<%-include("footer")%>
